<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="짝선배 짝후배 매칭 시스템"
                android:textColor="#000000"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/deep_blue_radius_8"
                android:orientation="vertical"
                android:paddingStart="22dp"
                android:paddingTop="32dp"
                android:paddingEnd="22dp"
                android:paddingBottom="25dp">

                <EditText
                    android:id="@+id/school_name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/white_radius_7"
                    android:hint="원하는 학교 이름을 입력해주세요"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/class_name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/white_radius_7"
                    android:hint="학과명을 입력해주세요"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tag_display"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/white_radius_7"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:text="태그를 선택해주세요 (중복 가능)"
                    android:textColor="#696969"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/search"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/white_radius_7"
                    android:text="짝선배 찾기"
                    android:textColor="#696969"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>